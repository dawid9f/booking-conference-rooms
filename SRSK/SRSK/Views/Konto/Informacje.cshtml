@model SRSK.Models.KontoModel

@{
    ViewData["Title"] = "Informacje";
}

<article class="container bg-light p-5 text-center">
    <div class="row">
        <table class="m-auto col-5">
            <thead class="border-bottom">
                <tr>
                    <th colspan="2" class="border-bottom">
                        <h1>Twoje konto</h1>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="inputalert" colspan="2">
                        @ViewBag.Info
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(a => a.Email)
                    </td>
                    <td>
                        @Model.Email.ToString()
                    </td>
                </tr>
                <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                <tr><td class="inputalert" colspan="2"></td></tr>
                <tr>
                    <td>
                        @Html.LabelFor(a => a.Imie)
                    </td>
                    <td>
                        @Model.Imie.ToString()
                    </td>
                </tr>
                <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                <tr><td class="inputalert" colspan="2"></td></tr>
                <tr>
                    <td>
                        @Html.LabelFor(a => a.Nazwisko)
                    </td>
                    <td>
                        @Model.Nazwisko.ToString()
                    </td>
                </tr>
                <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                <tr><td class="inputalert" colspan="2"></td></tr>
                <tr>
                    <td>
                        @Html.LabelFor(a => a.Telefon)
                    </td>
                    <td>
                        @Model.Telefon.ToString()
                    </td>
                </tr>
                <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                <tr>
                    <td class="inputalert" colspan="2">
                        <br />@Html.ActionLink("Wyloguj się", "LogOut") | @Html.ActionLink("Edytuj Dane", "Edytuj")<br />
                        <a href="../Pracownik/Index">@ViewBag.pracownik</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <table class="m-auto col-12">
            <thead class="border-bottom">
                <tr><td class="inputalert" colspan="5"></td></tr>
                <tr>
                    <td colspan="5">
                        <h2>Twoje rezerwacje</h2>
                    </td>
                </tr>
                <tr><td class="inputalert border-bottom" colspan="5"></td></tr>
                <tr>
                    <th class="col-2">
                        Budynek
                    </th>
                    <th class="col-2">
                        Sala
                    </th>
                    <th class="col-3">
                        Od
                    </th>
                    <th class="col-3">
                        Do
                    </th>
                    <th class="col-2">
                        Usuwanie
                    </th>
                </tr>
            </thead>
            <tbody>
           @foreach (var item in ViewBag.mojerezerwacje)
            {
                <tr class="border-bottom">
                    <td>
                        @item.Budynek
                    </td>
                    <td>
                        @item.Sala
                    </td>
                    <td>
                        @item.DataOd
                    </td>
                    <td>
                        @item.DataDo
                    </td>
                    <td>
                        @Html.ActionLink("Usuń", "Usun", "Rezerwacja", new { id = item.Id })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</article>