@model SRSK.Models.KontoModel

@{
    ViewData["Title"] = "Rejestracja";
}

@using (Html.BeginForm("Rejestracja", "Konto"))
{
    <article class="container bg-light p-5 text-center">
        <div class="row">
            <table class="m-auto col-5">
                <thead class="border-bottom">
                    <tr>
                        <th colspan="2" class="border-bottom">
                            <h1>Rejestracja</h1>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="inputalert" colspan="2">
                            @ViewBag.Info<br />
                            @Html.ValidationMessageFor(a => a.Email)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.Email)
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.Email)
                        </td>
                    </tr>
                    <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                    <tr>
                        <td class="inputalert" colspan="2">
                            @Html.ValidationMessageFor(a => a.HasloHASH)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.HasloHASH)
                        </td>
                        <td>
                            @Html.PasswordFor(a => a.HasloHASH)
                        </td>
                    </tr>
                    <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                    <tr>
                        <td class="inputalert" colspan="2">
                            @Html.ValidationMessageFor(a => a.Imie)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.Imie)
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.Imie)
                        </td>
                    </tr>
                    <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                    <tr>
                        <td class="inputalert" colspan="2">
                            @Html.ValidationMessageFor(a => a.Nazwisko)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.Nazwisko)
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.Nazwisko)
                        </td>
                    </tr>
                    <tr><td class="inputalert border-bottom" colspan="2"></td></tr>
                    <tr>
                        <td class="inputalert" colspan="2">
                            @Html.ValidationMessageFor(a => a.Telefon)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.Telefon)
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.Telefon)
                        </td>
                    </tr>
                    <tr>
                        <td class="inputalert border-bottom" colspan="2">
                        </td>
                    </tr>
                    <tr>
                        <td class="inputalert" colspan="2">
                            <br /><input type="submit" value="Rejestruj konto"><br />@Html.ActionLink("Zaloguj się", "Logowanie")<br />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>
}