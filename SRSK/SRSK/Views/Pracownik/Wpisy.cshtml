@model IEnumerable<SRSK.Models.WiadomoscModel>

@{
    ViewData["Title"] = "Wpisy";
}

<article class="container bg-light p-5 text-center">
    <div class="row">
        <table class="m-auto col-12">
            <thead class="border-bottom">
                <tr>
                    <th colspan="2" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="DodajWpis">Dodaj wpis</a>
                    </th>
                    <th colspan="1" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="Index">Panel Pracownika</a>
                    </th>
                </tr>
                <tr>
                    <th colspan="3" class="col-12 text-left p-1">
                        <h2>Wpisy:</h2>
                    </th>
                </tr>
                <tr>
                    <th class="col-1">
                        Id
                    </th>
                    <th class="col-9">
                        Tytuł
                    </th>
                    <th class="col-2">
                        Data dodania
                    </th>
                </tr>
            </thead>
            <tbody>
           @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="border-left border-right">
                        @Html.DisplayFor(modelItem => item.Tytul)
                    </td>
                    <td>
                        @item.Data.ToString("dd.MM.yyyy")
                    </td>
                </tr>
                <tr class="border-bottom border-top">
                    <td colspan="3" class="text-left">@Html.ActionLink("Czytaj cały wpis", "CzytajWpis", new { id = item.Id }) | @Html.ActionLink("Usuń", "UsunWpis", new { id = item.Id })</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</article>