@model IEnumerable<SRSK.Models.BlokadaWyswietlanie>

@{
    ViewData["Title"] = "Blokady kont";
}

<article class="container bg-light p-5 text-center">
    <div class="row">
        <table class="m-auto col-12">
            <thead class="border-bottom">
                <tr>
                    <th colspan="5" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="Klienci">Klienci</a>
                    </th>
                    <th colspan="1" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="Index">Panel Pracownika</a>
                    </th>
                </tr>
                <tr>
                    <th colspan="6" class="col-12 text-left p-1">
                        <h2>Blokady:</h2>
                    </th>
                </tr>
                <tr>
                    <th class="col-1">
                        Id konta
                    </th>
                    <th class="col-2">
                        Email
                    </th>
                    <th class="col-2">
                        Imie
                    </th>
                    <th class="col-2">
                        Nazwisko
                    </th>
                    <th class="col-2">
                        Do kiedy
                    </th>
                    <th class="col-3">
                        Powód
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdKonto)
                        </td>
                        <td class="border-left border-right">
                            @item.Email
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Imie)
                        </td>
                        <td class="border-left border-right">
                            @Html.DisplayFor(modelItem => item.Nazwisko)
                        </td>
                        <td>
                            @item.DataDo.ToString("dd.MM.yyyy")
                        </td>
                        <td class="border-left">
                            @Html.DisplayFor(modelItem => item.Informacje)
                        </td>
                    </tr>
                    <tr class="border-bottom border-top">
                        <td colspan="6" class="text-left">@Html.ActionLink("Odblokuj", "Odblokuj", new { id = item.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>