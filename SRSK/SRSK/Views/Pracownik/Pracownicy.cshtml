@model IEnumerable<SRSK.Models.KontoModel>

@{
    ViewData["Title"] = "Pracownicy";
}

<article class="container bg-light p-5 text-center">
    <div class="row">
        <table class="m-auto col-12">
            <thead class="border-bottom">
                <tr>
                    <th colspan="4" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="Klienci">Klienci</a>
                    </th>
                    <th colspan="1" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="Index">Panel Pracownika</a>
                    </th>
                </tr>
                <tr>
                    <th colspan="5" class="col-12 text-left p-1">
                        <h2>Pracownicy:</h2>
                    </th>
                </tr>
                <tr>
                    <th class="col-1">
                        Id
                    </th>
                    <th class="col-3">
                        Email
                    </th>
                    <th class="col-3">
                        Imie
                    </th>
                    <th class="col-3">
                        Nazwisko
                    </th>
                    <th class="col-2">
                        Telefon
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="border-left border-right">
                            @item.Email
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Imie)
                        </td>
                        <td class="border-left border-right">
                            @Html.DisplayFor(modelItem => item.Nazwisko)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefon)
                        </td>

                    </tr>
                    <tr class="border-bottom border-top">
                        <td colspan="5" class="text-left">@Html.ActionLink("Informacje", "Informacje", new { id = item.Id }) | @Html.ActionLink("Blokuj konto", "BlokujKonto", "Pracownik", new { id = item.Id }) | @Html.ActionLink("Usuń konto", "UsunKonto", "Pracownik", new { id = item.Id }) | @Html.ActionLink("Zwolnij", "Zwolnij", "Pracownik", new { id = item.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>