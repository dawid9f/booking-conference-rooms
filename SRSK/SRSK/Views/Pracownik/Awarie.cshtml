@model IEnumerable<SRSK.Models.AwarieWyswietlanie>

@{
    ViewData["Title"] = "Awarie";
}




<article class="container bg-light p-5 text-center">
    <div class="row">
        <table class="m-auto col-12">
            <thead class="border-bottom">
                <tr>
                    <th colspan="5" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="DodajAwarie">Dodaj awarie</a>
                    </th>
                    <th colspan="1" class="border p-1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pracownik" asp-action="Index">Panel Pracownika</a>
                    </th>
                </tr>
                <tr>
                    <th colspan="6" class="col-12 text-left p-1">
                        <h2>Rezerwacje:</h2>
                    </th>
                </tr>
                <tr>
                    <th class="col-1">
                        Id Awarii
                    </th>
                    <th class="col-1">
                        Budynek
                    </th>
                    <th class="col-1">
                        Sala
                    </th>
                    <th class="col-3">
                        Informacje
                    </th>
                    <th class="col-2">
                        Od
                    </th>
                    <th class="col-2">
                        Do
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Budynek)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sala)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Informacje)
                        </td>
                        <td>
                            @item.DataOd.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td>
                            @item.DataDo.ToString("dd.MM.yyyy HH:mm")
                        </td>
                    </tr>
                    <tr class="border-bottom border-top">
                        <td colspan="6" class="text-left">@Html.ActionLink("Usuń", "UsunAwarie", "Pracownik", new { id = item.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>



















