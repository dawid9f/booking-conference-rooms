@model IEnumerable<SRSK.Models.BudynekWybor>

@{
    ViewData["Title"] = "Budynki";
}

<article class="container bg-light p-5 text-center">
    <div class="row">
        <table class="m-auto col-12">
            <thead class="border-bottom">
                <tr>
                    <th colspan="5" class="border-bottom">
                        <h1>Wybór budynku</h1>
                    </th>
                </tr>
                <tr>
                    <th>
                        Symbol
                    </th>
                    <th>
                        Miasto
                    </th>
                    <th>
                        Adres
                    </th>
                    <th>
                        Informacje
                    </th>
                    <th>
                        Dostępność sal
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-bottom">
                        <td class="col-2">@Html.DisplayFor(modelItem => item.Symbol)</td>
                        <td class="col-2">@Html.DisplayFor(modelItem => item.Miasto)</td>
                        <td class="col-2">@Html.DisplayFor(modelItem => item.Adres)</td>
                        <td class="col-2">@Html.DisplayFor(modelItem => item.Informacje)</td>
                        <td class="col-2">@Html.ActionLink("(" + @item.IloscSal.ToString() + ") WYBIERAM", "Sale", new { IdB = item.Id, DataOd = ViewBag.DataOd, DataDo = ViewBag.DataDo })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>